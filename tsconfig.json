{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": ["@citizenfx/client", "@types/jest"]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
